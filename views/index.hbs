<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
 {{#each burgers}}
 {{#unless devoured}}
 {{> burgers/burger-block devour=true}}
 {{/unless}}
 {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
 {{#each burgers}}
 {{#if devoured}}
 {{> burgers/burger-block devour=false}}
 {{/if}}
 {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

 <div class="form-group">
  <label for="ca">Cat Name:</label>
  <input type="text" id="ca" name="name">
 </div>

 <div class="form-group">
  <label for="devoured">Sleepy?</label><br>
  <input type="radio" name="devoured" value="1" checked> Sleepy!<br>
  <input type="radio" name="devoured" value="0"> Awake
 </div>

 <button type="submit">Add Cat</button>
</form>


